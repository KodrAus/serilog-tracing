        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <VersionSuffix Condition=" '$(VersionSuffix)' == '' ">pre</VersionSuffix>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Serilog.Expressions" Version="4.0.0" />
